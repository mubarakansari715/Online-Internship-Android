<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5sp"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_margin="5sp">
            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="283dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Student Name : "
                    android:textColor="@color/black"
                    android:textSize="20sp" />
                <EditText
                    android:id="@+id/edt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="283dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Er_Number      : "
                    android:textColor="@color/black"
                    android:textSize="20sp" />
                <EditText
                    android:id="@+id/edt_er"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="?android:attr/colorBackground"
                android:layout_marginTop="10sp">
                <LinearLayout
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="20dp"
                        android:layout_weight="1"
                        android:layout_margin="5sp"
                        android:text="Subject "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="20dp"
                        android:layout_weight="1"
                        android:layout_margin="5sp"
                        android:text="Total Marks "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="20dp"
                        android:layout_weight="1"
                        android:layout_margin="5sp"
                        android:text="Marks "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35sp"
                        android:orientation="horizontal"
                        android:weightSum="3">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5sp"
                            android:layout_weight="1"
                            android:text="C "
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5sp"
                            android:layout_weight="1"
                            android:text="100"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="20dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter C"
                            android:weightSum="1">


                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/c_mark"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:inputType="number" />


                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5sp"
                            android:layout_weight="1"
                            android:text="C ++ "
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5sp"
                            android:layout_weight="1"
                            android:text="100"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="20dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter C++"
                            android:weightSum="1">


                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/cpls_mark"
                                android:layout_width="100dp"
                                android:layout_height="fill_parent"
                                android:inputType="number" />


                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5sp"
                            android:layout_weight="1"
                            android:text="Java "
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5sp"
                            android:layout_weight="1"
                            android:text="100"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="20dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter Java"
                            android:weightSum="1">


                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/java_mark"
                                android:layout_width="100dp"
                                android:layout_height="fill_parent"
                                android:inputType="number" />


                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5sp"
                            android:layout_weight="1"
                            android:text="Python "
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5sp"
                            android:layout_weight="1"
                            android:text="100"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="20dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter Python"
                            android:weightSum="1">


                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/python_mark"
                                android:layout_width="100dp"
                                android:layout_height="fill_parent"
                                android:inputType="number" />


                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5sp"
                            android:layout_weight="1"
                            android:text="Android "
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5sp"
                            android:layout_weight="1"
                            android:text="100"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="20dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter Android"
                            android:weightSum="1">


                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/android_mark"
                                android:layout_width="100dp"
                                android:layout_height="fill_parent"
                                android:inputType="number" />


                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>
                    <Button
                        android:id="@+id/gnresult"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Generate Results"
                        android:layout_marginTop="10sp"/>
                    <LinearLayout
                        android:layout_marginTop="10sp"
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_margin="5sp"
                            android:layout_width="283dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Student Name : "
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                        <TextView
                            android:id="@+id/view_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_margin="5sp"
                            android:layout_width="283dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Er_Number      : "
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                        <TextView
                            android:id="@+id/view_er"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textStyle="bold"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="20dp"
                            android:layout_weight="1"
                            android:layout_margin="5sp"
                            android:text="Totale Marks : "
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/get_total"
                            android:textStyle="bold"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="20dp"
                            android:layout_weight="1"
                            android:layout_margin="5sp"
                            android:text="0 "
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:textStyle="bold"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="20dp"
                            android:layout_weight="1"
                            android:layout_margin="5sp"
                            android:text="Percentage     :"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/res_per"
                            android:textStyle="bold"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="20dp"
                            android:layout_weight="1"
                            android:layout_margin="5sp"
                            android:text=" % "
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:textStyle="bold"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="20dp"
                            android:layout_weight="1"
                            android:layout_margin="5sp"
                            android:text="Overall Grade : "
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/res_grade"
                            android:textStyle="bold"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="20dp"
                            android:layout_weight="1"
                            android:layout_margin="5sp"
                            android:text=" A "
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>



                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>



</RelativeLayout>